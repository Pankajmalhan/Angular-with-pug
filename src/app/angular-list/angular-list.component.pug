table(class="table table-striped")
    thead
        tr
            th #
            th Employee Name
            th Age
            th Project
            th Action
    tbody
        tr(*ngFor="let item of employeeList")
            td {{item.employeeId}}
            td {{item.employeeName}}
            td {{item.employeeAge}}
            td {{item.project}}
            td 
                button(type="button", class="btn btn-info btn-lg",
                    data-toggle="modal", data-target="#myModal", (click)="deleteEmployee(item.employeeId)") Delete

div#myModal.modal.fade(role="dialog")
    div.modal-dialog
        div.modal-content
            div.modal-header
                button(type="button", class="close",data-dismiss="modal") &times;
                h4.modal-title Modal Header
            div.modal-body
                p Are you want to delete this employee
                button(type="button",class="btn btn-danger",data-dismiss="modal",(click)="remove()") Yes
            div.modal-footer
                 button(type="button",class="btn btn-default",data-dismiss="modal") Close
